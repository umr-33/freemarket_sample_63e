<div class="new-item">
  <div class="new-item__header">
    <div class="new-item__header__icon">
      <%= link_to root_path do %>
        <img src="https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg" alt="Mercari" class="merukari-icon">
      <% end %>
    </div>
  </div>
  <div class="new-item__main">
    <div class="new-item__main__title">
      商品の情報を入力
    </div>

    <div class="new-item__main__input">
      <%= form_for(@item, local: true) do |f| %>
        <div class="new-item__main__input__element">
          <div class="new-item__main__input__element__caption">
            <span class="new-item__main__input__element__caption__text">出品画像</span>
            <span class="require-icon">必須</span>
          </div>
          <p class="new-item__main__input__element__description">最大10枚までアップロードできます</p>
          <%= f.file_field :images, class: 'image-post-area', name: 'item_images[image][]', multiple: true %>
        </div>
        <div class="new-item__main__input__element">
          <div class="new-item__main__input__element__caption">
            <span class="new-item__main__input__element__caption__text">商品名</span>
            <span class="require-icon">必須</span>
          </div>
          <%= f.text_field :title, class: "input-form", placeholder: "商品名（必須40文字まで）" %>
          <div class="new-item__main__input__element__caption">
            <span class="new-item__main__input__element__caption__text">商品の説明</span>
            <span class="require-icon">必須</span>
          </div>
          <%= f.text_area :description, class: "text-area", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" %>
        </div>
        <div class="new-item__main__input__element">
          <div class="new-item__main__input__element__left">
            商品の詳細
          </div>
          <div class="new-item__main__input__element__right">
            <div class="new-item__main__input__element__caption">
              <span class="new-item__main__input__element__caption__text">カテゴリー</span>
              <span class="require-icon">必須</span>
            </div>
            <% Category.find(1).children %>
            <%= f.collection_select :category_id, Category.find(1).children, :id, :name, include_blank: "---", class: "input-form" %>
            <%= f.collection_select :category_id, Category.find(2).children, :id, :name, include_blank: "---", class: "input-form" %>
            <%= f.collection_select :category_id, Category.find(15).children, :id, :name, include_blank: "---", class: "input-form" %>

            <%= f.collection_select :item_status_id, ItemStatus.all, :id, :name, include_blank: "---", class: "input-form" %>
          </div>
        </div>
        <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: "---", class: "input-form" %>
        <%= f.collection_select :shipping_charger_id, ShippingCharger.all, :id, :name, include_blank: "---", class: "input-form" %>
        <%= f.collection_select :shipping_method_id, ShippingMethod.all, :id, :name, include_blank: "---", class: "input-form" %>
        <%= f.collection_select :days_to_ship_id, DaysToShip.all, :id, :name, include_blank: "---", class: "input-form" %>
        <%= f.collection_select :trade_status_id, TradeStatus.all, :id, :name, include_blank: "---", class: "input-form" %>
        <%= f.text_field :brand_id, placeholder: "brand" %>
        <%= f.submit "出品する" %>
      <% end %>
      <%= link_to root_path do %>
        もどる
      <% end %>
    </div>
  </div>
</div>
