<div class="new-item">
  <div class="new-item__header">
    <div class="new-item__header__icon">
      <%= link_to root_path do %>
        <img src="https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg" alt="Mercari" class="merukari-icon">
      <% end %>
    </div>
  </div>
  <div class="new-item__main">
    <div class="new-item__main__title">
      商品の情報を入力
    </div>

    <div class="new-item__main__input">
      <%= form_for(@item, local: true) do |f| %>
        <%= f.text_field :title, placeholder: "商品名（必須40文字まで）" %>
        <%= f.text_area :description, placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" %>
        <%= f.text_field :prefecture_id, placeholder: "prefecture_id" %>
        <%= f.text_field :shipping_charger_id, placeholder: "shipping_charger_id" %>
        <%= f.text_field :shipping_method_id, placeholder: "shipping_method_id" %>
        <%= f.text_field :days_to_ship_id, placeholder: "days_to_ship_id" %>
        <%= f.text_field :item_status_id, placeholder: "item_status_id" %>
        <%= f.text_field :trade_method_id, placeholder: "trade_method_id" %>
        <%= f.text_field :brand_id, placeholder: "brand" %>
        <%= f.text_field :category_id, placeholder: "category" %>
        <%= f.file_field :images, class: 'file-field', name: 'item_images[image][]', multiple: true %>
        <%= f.submit "出品する" %>
      <% end %>
      <%= link_to root_path do %>
        もどる
      <% end %>
    </div>
  </div>
</div>
