<div class="header" id="default_header">
  <div class="header-contents">
      <div class="title">
        <div class="icon">
            <a href="/"><img src="/images/fmarket_icon/fmarket_logo_white.svg" alt="Mercari" class="merukari-icon"></a>
        </div>
          <div class="search-form">
            <input type="text" class="search-form-space"
            placeholder="何かお探しですか？">
            <label>
              <div class="search-icon" >
                <i class="fas fa-search"></i>
              </div>
            </label>
          </div>
      </div>
      <div class="title-lists">
        <div class="item-lists">
          <div class="category-list item-list">
            <div class="category-icon" style="color:red;">
              <i class="fas fa-list-ul"></i>
            </div>
            <%=link_to root_path do%>
              <div class="category-font item-list-font">
                カテゴリーから探す
              </div>
            <%end%>
          </div>

          <%=link_to brand_path(2) do%>
          <div class="brand-list item-list">
            <div class="brand-icon" style="color:red;">
              <i class="fas fa-tags"></i>
            </div>
            <div class="brand-font item-list-font">
                ブランドから探す
            </div>
          </div>
          <%end%>
        </div>
        <% if user_signed_in? %>
        <div class="my-lists">
          <div class="good-list my-list">
            <div class="good-icon">
              <i class="far fa-heart"></i>
            </div>
            <div class="good-font my-list-font">
              いいね！一覧
            </div>
          </div>
          <div class="news-list my-list">
            <div class="news-icon">
              <i class="far fa-bell"></i>
            </div>
            <div class="news-font my-list-font">
              お知らせ
            </div>
          </div>
          <div class="todo-list my-list">
            <div class="todo-icon">
              <i class="fas fa-check"></i>
            </div>
            <div class="todo-font my-list-font">
              やることリスト
            </div>
          </div>
            <%=link_to user_path(current_user.id) do%>
            <div class="mypage-list my-list">
              <div class="mypage-icon">
                <i class="far fa-smile"></i>
              </div>
              <div class="mypage-font my-list-font">
                マイページ
              </div>
            </div>
            <%end%>
        </div>
        <% else %>
          <div class="no-signin">
            <div class="new_member">
              <a href="/users/new" class="new-access">
              <div class="button new">
                新規会員登録
              </div>
              </a>
            </div>
            <div class="login_member">
              <a href="/users/sign_in" class="login-access">
              <div class="button login">
                ログイン
              </div>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>

</div>