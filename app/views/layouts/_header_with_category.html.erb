<div class="header">
  <div class="header-contents">
      <div class="title">
        <div class="icon">
            <a href="/"><img src="/images/fmarket_icon/fmarket_logo_red.svg" alt="Mercari" class="merukari-icon"></a>
        </div>
        <div class="search-form">
          <%= search_form_for @q, url: "/items/search" do |f| %>
            <%=f.search_field :title_cont, class: "search-form-space",
            placeholder: "何かお探しですか？"%>
            <label>
              <%= f.submit style: "display:none;"%>
              <div class="search-icon">
                <i class="fas fa-search"></i>
              </div>
            </label>
          <%end%>
        </div>
      </div>
      <div class="title-lists">
        <div class="item-lists">
          <div class="category-list item-list">
            <div class="category-icon" style="color:red;">
              <i class="fas fa-list-ul"></i>
            </div>
            <div class="category-font item-list-font">
              カテゴリーから探す
            </div>
          </div>

          <%=link_to brand_path(2) do%>
          <div class="brand-list item-list">
            <div class="brand-icon" style="color:red;">
              <i class="fas fa-tags"></i>
            </div>
            <div class="brand-font item-list-font">
                ブランドから探す
            </div>
          </div>
          <%end%>
        </div>
        <% if user_signed_in? %>
        <div class="my-lists">
          <div class="good-list my-list">
            <div class="good-icon">
              <i class="far fa-heart"></i>
            </div>
            <div class="good-font my-list-font">
              いいね！一覧
            </div>
          </div>
          <div class="news-list my-list">
            <div class="news-icon">
              <i class="far fa-bell"></i>
            </div>
            <div class="news-font my-list-font">
              お知らせ
            </div>
          </div>
          <div class="todo-list my-list">
            <div class="todo-icon">
              <i class="fas fa-check"></i>
            </div>
            <div class="todo-font my-list-font">
              やることリスト
            </div>
          </div>
            <%=link_to user_path(current_user.id) do%>
            <div class="mypage-list my-list">
              <div class="mypage-icon">
                <i class="far fa-smile"></i>
              </div>
              <div class="mypage-font my-list-font">
                マイページ
              </div>
            </div>
            <%end%>
        </div>
        <% else %>
          <div class="no-signin">
            <div class="new_member">
              <a href="/users/new" class="new-access">
              <div class="button new">
                新規会員登録
              </div>
              </a>
            </div>
            <div class="login_member">
              <a href="/users/sign_in" class="login-access">
              <div class="button login">
                ログイン
              </div>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  <div class="content_wrapper" id="search_with_category">
    <ul class="top_cat hidden">
      <% @root_cat = Category.find(1) %>
      <% @root_cat.children.each do |topcat| %>
        <li data-cat-id="<%=topcat.id%>">
          <a href=""><%= topcat.name %></a>
        </li>
      <%end%>
    </ul>

    <% @root_cat.children.each do |topcat| %>
      <ul class="middle_cat hidden" id="<%="cat#{topcat.id}"%>">
        <%topcat.children.each do |midcat|%>
        <li data-cat-id="<%=midcat.id%>">
          <a href=""><%=midcat.name%></a>
        </li>
        <%end%>
      </ul>
      
        <%topcat.children.each do |midcat|%>
        <%if midcat.children.length > 0%>
          <ul class="bottom_cat hidden" id="<%="cat#{midcat.id}"%>">
            <%midcat.children.each do |botcat|%>
            <li>
              <a href="/categories/<%=botcat.id%>">
                <%= botcat.name%>
              </a>
              <span><%=botcat.items_size%><span>
            </li>
            <%end%>
          </ul>
        <%end%>
        <%end%>
    <%end%>
  </div>
</div>