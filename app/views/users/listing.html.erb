<%= render "layouts/header" %>

<% breadcrumb :listing %>
  <%= breadcrumbs separator: " &rsaquo; "%>

<div class="contents-wrapper">
  <div class="contents clearfix">
    <div class="right-content">   
      <div class="listings">
        <ul class="listing-items">
          出品した商品 
        </ul> 
        <ul class="listing-tabs">
          <li class="active"><a href=""><h3>出品中</h3></a></li>
          <li class=""><a href=""><h3>取引中</h3></a></li>
          <li class=""><a href=""><h3>売却済み</h3></a></li>
        </ul>
        <%current_user.items.each do |i|%>
          <ul class="listing-lists"> 
            <%=link_to item_path(i.id) do%>
              <li class="clearfix"> 
                <% image_url = (i.images.size > 0) ? i.images[0].image : '/images/no_image.png' %>
                <%= image_tag image_url, class: 'listing-item', size: '48x48' %>
                <div class="listing-item-body">
                  <p class="item-title"><%=i.title%></p>
                </div>
                <p><i class="fas fa-chevron-right"></i></p>
              </li>
            <%end%> 
          </ul> 
        <%end%> 
      </div>
    </div>
    
    <div class="left-nav">
      <ul>
        <%= link_to user_path do%>
          <li><span>マイページ</span><span><i class="fas fa-chevron-right"></i></span></li>
        <% end %>  
        <li><span>やることリスト</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>いいね！一覧</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>出品する</span><span><i class="fas fa-chevron-right"></i></span></li>

        <%=link_to listing_user_path do%>
          <li id="user_listing"><span>出品した商品 - 出品中</span><span><i class="fas fa-chevron-right"></i></span></li>
        <%end%>
        
        <li><span>出品した商品 - 取引中</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>出品した商品 - 売却済み</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>購入した商品 - 取引中</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>購入した商品 - 過去の取引</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>ニュース一覧</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>評価一覧</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>ガイド</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>お問い合わせ</span><span><i class="fas fa-chevron-right"></i></span></li>
      </ul>
      <h3>メルペイ</h3>
      <ul>
        <li><span>売上・振込申請</span><span><i class="fas fa-chevron-right"></i></span></li>
        <li><span>ポイント</span><span><i class="fas fa-chevron-right"></i></span></li>
      </ul>
      <h3>設定</h3>
      <ul>
        <%=link_to profile_user_path do%>
          <li id="user_profile"><span>プロフィール</span><span><i class="fas fa-chevron-right"></i></span></li>
        <% end %>
        <li><span>発送元・お届け先住所変更</span><span><i class="fas fa-chevron-right"></i></span></li>
        <%=link_to payment_users_path do%>
          <li id="user_payment"><span>支払い方法</span><span><i class="fas fa-chevron-right"></i></span></li>
        <%end%>
        <li><span>メール/パスワード</span><span><i class="fas fa-chevron-right"></i></span></li>
        <%=link_to identification_users_path do%>
          <li id="user_identification"><span>本人情報</span><span><i class="fas fa-chevron-right"></i></span></li>
        <%end%>
        <li><span>電話番号の確認</span><span><i class="fas fa-chevron-right"></i></span></li>
        <%=link_to logout_users_path do%>
          <li id="user_logout"><span>ログアウト</span><span><i class="fas fa-chevron-right"></i></span></li>
        <%end%>
      </ul>
    </div> 
  </div>
</div>

<%= render "layouts/footer" %>

<script>
$(function () {
  $('#user_listing').addClass('active_nav')
})
</script>